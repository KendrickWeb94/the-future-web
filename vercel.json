{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php", // Entry point for serverless function
        "use": "@vercel/php" // Use the Vercel PHP builder
      }
    ],
    "routes": [
      {
        "src": "/(.*)", // Catch all routes
        "dest": "api/index.php" // Route all requests to the serverless function
      }
    ],
      "functions": {
      "api/index.php": {
        "runtime": "vercel-php@0.6.0"
      }
    },
    "env": {
      "APP_KEY": "@app_key",
      "APP_STORAGE": "/tmp",
      "CACHE_DRIVER": "array",
      "SESSION_DRIVER": "array",
      "VIEW_COMPILED_PATH": "/tmp/views",
      "CONFIG_CACHE_PATH": "/tmp/config.php",
      "ROUTE_CACHE_PATH": "/tmp/routes.php",
      "EVENT_CACHE_PATH": "/tmp/events.php",
      "APP_DEBUG": "true"
    }
  }
